<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Phonograph" parent="Theme.Phonograph.Base" />

    <style name="Theme.Phonograph.Light" parent="Theme.Phonograph.Base.Light" />

    <style name="Theme.Phonograph.Black" parent="Theme.Phonograph.Base.Black" />

    <style name="Theme.Phonograph.Notification" parent="@android:style/TextAppearance.StatusBar.EventContent" />

    <style name="Theme.Phonograph.Notification.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />

    <style name="OverFlowButton">
        <item name="srcCompat">@drawable/ic_more_vert_white_24dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?attr/roundSelector</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="PlayingIndicator">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Fab" parent="FabParent" />

    <style name="MusicProgressSlider" parent="MusicProgressSliderParent">
        <item name="android:thumbOffset">0dp</item>
    </style>

    <style name="TraditionalMusicProgressSlider" parent="TraditionalMusicProgressSliderParent">
        <item name="android:thumbOffset">0dp</item>
    </style>

    <style name="Toolbar">
        <item name="titleMarginStart">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">?toolbarPopupTheme</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/toolbar_elevation</item>
        <item name="android:transitionName" tools:ignore="NewApi">toolbar</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.QuickLyric.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.QuickLyric" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="themeName">Amber</item>
        <item name="highlightColor">@android:color/holo_orange_light</item>
        <item name="android:headerBackground">@drawable/drawer_header</item>
        <item name="actionBarTheme">@style/actionBar.QuickLyric</item>
        <item name="android:listViewStyle">@style/Widget.AppCompat.ListView.DropDown</item>
        <item name="android:dropDownListViewStyle">@style/DropDownBackground</item>
        <item name="android:dropDownItemStyle">@style/searchSuggestionItemStyle</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionBarSize">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionMode.CloseButton</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_arrow_back</item>
        <item name="android:actionModeBackground">@drawable/cab_background</item>
        <item name="actionModeBackground">@drawable/cab_background</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="vpiCirclePageIndicatorStyle">@style/materialCirclePageIndicator</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
        <item name="android:actionMenuTextColor">?android:textColorPrimary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:scrollViewStyle">@style/ScrollViewQuicklyric</item>
        <item name="drawerArrowStyle">@style/DrawerArrowQuickLyric</item>
        <item name="android:panelColorBackground">@android:color/white</item>
        <item name="firstLaunchCoverDrawable">@drawable/first_launch_cover</item>
        <item name="android:textColorSecondary">#888</item>
        <item name="android:textColorSecondaryInverse">#575757</item>
        <item name="android:textColorPrimary">#222</item>
        <item name="android:colorBackground">#fafafa</item>
        <item name="android:absListViewStyle">@style/DrawerListViewAppearance</item>
        <item name="android:galleryItemBackground">@color/navigation_drawer_selected</item>
        <item name="android:listSelector">@drawable/listview_row_selector</item>
        <item name="android:detailsElementBackground">@color/pager_title_strip_color</item>
        <item name="asb_switchPreferenceStyle">@style/asb_Preference.SwitchPreference</item>
        <item name="android:panelColorForeground">@color/expanded</item>
        <item name="rippleBackGroundColor">#585858</item>
        <item name="textAppearanceSearchResultTitle">@style/SearchResult</item>
        <item name="searchBarTheme">@style/Theme.QuickLyric</item>
    </style>

    <style name="Theme.QuickLyric.Red" parent="Theme.QuickLyric">
        <item name="themeName">Red</item>
        <item name="highlightColor">@color/material_red_500</item>
        <item name="android:headerBackground">@drawable/drawer_header_dark</item>
        <item name="firstLaunchCoverDrawable">@drawable/first_launch_cover_dark</item>
        <item name="colorPrimary">@color/material_red_500</item>
        <item name="colorPrimaryDark">@color/material_red_800</item>
        <item name="android:detailsElementBackground">@color/material_red_400</item>
        <item name="colorAccent">@color/material_orange_A200</item>
    </style>

    <style name="Theme.QuickLyric.Purple" parent="Theme.QuickLyric">
        <item name="themeName">Purple</item>
        <item name="highlightColor">@color/material_purple_500</item>
        <item name="android:headerBackground">@drawable/drawer_header_dark</item>
        <item name="firstLaunchCoverDrawable">@drawable/first_launch_cover_dark</item>
        <item name="colorPrimary">@color/material_purple_500</item>
        <item name="colorPrimaryDark">@color/material_purple_700</item>
        <item name="colorAccent">@color/material_amber_A700</item>
        <item name="android:detailsElementBackground">@color/material_purple_300</item>
    </style>

    <style name="Theme.QuickLyric.Indigo" parent="Theme.QuickLyric">
        <item name="themeName">Indigo</item>
        <item name="highlightColor">@color/material_indigo_500</item>
        <item name="android:headerBackground">@drawable/drawer_header_dark</item>
        <item name="firstLaunchCoverDrawable">@drawable/first_launch_cover_dark</item>
        <item name="colorPrimaryDark">@color/material_indigo_700</item>
        <item name="colorPrimary">@color/material_indigo_500</item>
        <item name="android:detailsElementBackground">@color/material_indigo_300</item>
        <item name="colorAccent">@color/material_pink_A700</item>
    </style>

    <style name="Theme.QuickLyric.Green" parent="Theme.QuickLyric">
        <item name="themeName">Green</item>
        <item name="highlightColor">@color/material_green_500</item>
        <item name="android:headerBackground">@drawable/drawer_header_dark</item>
        <item name="firstLaunchCoverDrawable">@drawable/first_launch_cover_dark</item>
        <item name="colorAccent">@color/deep_orange</item>
        <item name="colorPrimaryDark">@color/material_green_700</item>
        <item name="colorPrimary">@color/material_green_500</item>
        <item name="android:detailsElementBackground">@color/material_green_300</item>
    </style>

    <style name="Theme.QuickLyric.Lime" parent="Theme.QuickLyric">
        <item name="themeName">Lime</item>
        <item name="highlightColor">@color/material_Lime_500</item>
        <item name="android:headerBackground">@drawable/drawer_header_dark</item>
        <item name="firstLaunchCoverDrawable">@drawable/first_launch_cover_dark</item>
        <item name="colorPrimary">@color/material_Lime_600</item>
        <item name="colorPrimaryDark">@color/material_Lime_700</item>
        <item name="colorAccent">@color/material_pink_A200</item>
        <item name="android:detailsElementBackground">@color/material_Lime_400</item>
    </style>

    <style name="Theme.QuickLyric.Brown" parent="Theme.QuickLyric">
        <item name="themeName">Brown</item>
        <item name="highlightColor">@color/material_brown_500</item>
        <item name="android:headerBackground">@drawable/drawer_header_dark</item>
        <item name="firstLaunchCoverDrawable">@drawable/first_launch_cover_dark</item>
        <item name="colorPrimary">@color/material_brown_500</item>
        <item name="colorPrimaryDark">@color/material_brown_700</item>
        <item name="colorAccent">@color/material_green_A200</item>
        <item name="android:detailsElementBackground">@color/material_brown_300</item>
    </style>

    <style name="Theme.QuickLyric.Dark" parent="Theme.QuickLyric">
        <item name="themeName">Dark</item>
        <item name="android:headerBackground">@drawable/drawer_header_dark</item>
        <item name="firstLaunchCoverDrawable">@drawable/first_launch_cover_dark</item>
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="android:detailsElementBackground">@color/pager_title_strip_color_dark</item>
        <item name="android:dropDownListViewStyle">@style/DropDownBackground.Dark</item>
        <item name="android:dropDownItemStyle">@style/Widget.AppCompat.DropDownItem.Spinner</item>
        <item name="textAppearanceSearchResultTitle">@style/DarkSearchResult</item>
    </style>

    <style name="Theme.QuickLyric.Night" parent="Theme.QuickLyric.Dark">
        <item name="themeName">Night</item>
        <item name="alertDialogTheme">@style/NightDialog</item>
        <item name="android:colorBackground">#555</item>
        <item name="android:panelColorBackground">#333</item>
        <item name="android:textColorSecondary">#BBB</item>
        <item name="android:textColorSecondaryInverse">#BBB</item>
        <item name="android:textColorPrimary">#EEE</item>
        <item name="rippleBackGroundColor">#191919</item>
        <item name="searchBarTheme">@style/Theme.QuickLyric.Night</item>
        <item name="android:panelColorForeground">@color/expanded_night</item>
        <item name="android:absListViewStyle">@style/DrawerListViewAppearance.Night</item>
        <item name="android:divider">@color/divider_night</item>
        <item name="android:listSelector">@drawable/listview_row_selector_night</item>
        <item name="actionOverflowMenuStyle">@style/overflowMenuStyle</item>
        <item name="android:galleryItemBackground">@color/navigation_drawer_selected_night</item>
        <item name="textAppearanceLargePopupMenu">@style/overflowMenuTextAppearanceNight</item>
    </style>

    <style name="NightDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#555</item>
        <item name="android:textColorSecondary">#BBB</item>
        <item name="android:textColorSecondaryInverse">#BBB</item>
        <item name="android:textColorPrimary">#EEE</item>
        <item name="textColorAlertDialogListItem">#DDD</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
    </style>

    <style name="actionBar.QuickLyric" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionBarItemBackground">@drawable/abc_item_background_holo_light</item>
        <item name="selectableItemBackground">@drawable/abc_item_background_holo_light</item>
        <item name="android:popupMenuStyle">@style/Widget.AppCompat.Light.PopupMenu</item>
        <item name="android:actionOverflowMenuStyle" tools:ignore="NewApi">@android:style/Widget.Material.Light.PopupMenu.Overflow</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item>
        <item name="android:textColorPrimaryDisableOnly">@color/abc_primary_text_disable_only_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/abc_secondary_text_material_light</item>
        <item name="android:textColorTertiary">@color/abc_secondary_text_material_dark</item>
        <item name="android:textColorTertiaryInverse">@color/abc_secondary_text_material_light</item>
        <item name="android:textColorHint">@color/abc_hint_foreground_material_dark</item>
        <item name="android:textColorHintInverse">@color/abc_hint_foreground_material_light</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:colorBackgroundCacheHint">@color/abc_background_cache_hint_selector_material_dark</item>
    </style>

    <style name="ActionMode.CloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="ScrollViewQuicklyric" parent="android:Widget.ScrollView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="DrawerArrowQuickLyric" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DrawerListViewAppearance" parent="Theme.QuickLyric">
        <item name="colorControlHighlight">#e0e0e0</item>
        <item name="android:background">?android:attr/panelColorBackground</item>
    </style>

    <style name="DrawerListViewAppearance.Night" parent="Theme.QuickLyric.Night">
        <item name="colorControlHighlight">#555</item>
        <item name="android:background">?android:attr/panelColorBackground</item>
    </style>

    <style name="DropDownBackground" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">#fff</item>
    </style>

    <style name="DropDownBackground.Dark" parent="Widget.AppCompat.ListView.DropDown">
    </style>

    <style name="searchSuggestionItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
    </style>

    <style name="TextAppearance.Invisible" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#0fff</item>
    </style>

    <style name="overflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#444</item>
    </style>

    <style name="overflowMenuTextAppearanceNight" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">#EEE</item>
    </style>

    <style name="materialCirclePageIndicator">
        <item name="fillColor">#a0f0f0f0</item>
        <item name="pageColor">#232b2b2b</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">4.5dp</item>
        <item name="snap">true</item>
    </style>

    <style name="PagerTabStripText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchResult" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="DarkSearchResult" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>
