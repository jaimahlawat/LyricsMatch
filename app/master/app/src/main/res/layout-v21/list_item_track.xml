<android.support.v7.widget.CardView
    android:id="@+id/item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_gravity="center_horizontal"
    android:clickable="true"
    app:contentPaddingBottom="3dp"
    app:contentPaddingTop="3dp"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="?android:panelColorBackground"
    app:cardElevation="4dp">

    <ImageView
        android:id="@+id/recents_image_view_cover_art"
        android:layout_width="80dp"
        android:scaleType="fitCenter"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="84dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recents_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/recents_artist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>