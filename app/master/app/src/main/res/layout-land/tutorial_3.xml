<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tutorial_3_texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        app:layout_marginEndPercent="3%"
        app:layout_widthPercent="35%">

        <TextView
            android:id="@+id/textView3_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_desc"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textSize="20sp"
            app:layout_marginTopPercent="10%"/>

        <TextView
            android:id="@+id/textView3_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/id_desc_sub"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="?android:attr/textColorPrimaryInverse"
            app:layout_widthPercent="40%"
            tools:ignore="RtlSymmetry"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tutorial_3_texts"
        android:layout_toStartOf="@id/tutorial_3_texts"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/musicid_demo_hand_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:rotation="-10"
            android:scaleType="fitCenter"
            android:src="@drawable/intro_3_hand"/>

        <ImageView
            android:id="@+id/musicid_demo_sound_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/intro_3_sound"
            android:translationY="-20dp"/>

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>